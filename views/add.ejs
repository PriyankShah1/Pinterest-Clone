<%- include('./partials/header.ejs') %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post.</h1>
    <hr class="mt-3 opacity-10">

    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="file" name="postimage">
        <input class="text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
        <textarea class="text-black block w-1/3 h-60 px-3 py-2 border-2 mt-2 rounded-md" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md bg-red-700" type="submit" value="Create a Post">
    </form>
</div>

